<?xml version="1.0" encoding="UTF-8"?>
<book-templates xmlns="/bas/book-template">
    <book-template name="alphabet book" page-template="a5 plain">
        <long-name lang="fa">یک کتاب الفبا به اندزه A5</long-name>
        <long-name lang="en">An A5-sized alphabet book</long-name>
        <front-matter>
            <page layout-template="title page with graphic"/>
            <page layout-template="blank"/>
        </front-matter>
        <middle-matter>
            <page layout-template="alphabet book letter display page"/>
        </middle-matter>
        <back-matter>
            <filler-pages-here/>
            <page layout-template="dense text"/>
        </back-matter>
